{
    "name"       : "sk_app",
    "description": "The open source website for Leslie Verploegen's and Eric Ferraiuolo's wedding.",
    "homepage"   : "http://leslie-eric.us/",
    "version"    : "1.8.0",
    "private"    : true,

    "author": "Eric Ferraiuolo <eferraiuolo@gmail.com> (http://ericf.me/)",

    "license": "MIT",

    "directories": {
        "lib"       : "./lib",
        "middleware": "./middleware",
        "public"    : "./public",
        "routes"    : "./routes",
        "scripts"   : "./scripts",
        "views"     : "./views"
    },

    "main": "server",

    "engines": {
        "node": "^4.7",
        "npm" : "*"
    },

    "dependencies": {
        "async"              : "0.2.x",
        "bower"              : "1.2.x",
        "combohandler"       : "0.2.x",
        "csv"                : "0.3.x",
        "db-migrate"         : "0.4.x",
        "deep-freeze"        : "0.0.1",
        "express"            : "3.2.4",
        "express-slash"      : "0.2.0",
        "express-state"      : "0.0.2",
        "express3-handlebars": "0.5.0",
        "handlebars"         : "1.0.x",
        "pg"                 : "1.1.x",
        "request"            : "2.25.0"
    },

    "scripts": {
        "dev": "docker-compose up",
        "migrate-up": "./node_modules/db-migrate/bin/db-migrate up -e default --config config/migrations.json"
    }
}
